{% extends 'base.html.twig' %}

{% block title %}Emprunt index{% endblock %}

{% block titreH1 %}Tous les emprunts{% endblock %}


{% block body %}
    

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Abonné</th>
                <th>Livre</th>
                <th>DateEmprunt</th>
                <th>DateRetour</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emprunt in emprunts %}
            <tr>
                <td>{{ emprunt.id }}</td>
                <td>{{ emprunt.abonne.pseudo }}</td>
                <td>{{ emprunt.livre.titreAuteur }}</td>
                <td>{{ emprunt.dateEmprunt|date('d/m/Y') }}</td>
                <td>{{ emprunt.dateRetour ? emprunt.dateRetour|date('d/m/Y') : 'à rendre' }}</td>
                <td>
                    <a href="{{ path('app_admin_emprunt_show', {'id': emprunt.id}) }}">show</a>
                    <a href="{{ path('app_admin_emprunt_edit', {'id': emprunt.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_emprunt_new') }}">Create new</a>
{% endblock %}

{% extends "base.html.twig" %}

{% block title %}Confirmation de suppression{% endblock %}

{% block body %}
    <h2>Etes-vous sûr(e) de vouloir supprimer l'auteur n°{{ auteur.id }}</h2>

    <ul class="list-group">
        <li class="list-group-item">
            <strong>ID</strong> : {{ auteur.id }}
        </li>
        <li class="list-group-item">
            <strong>identite</strong> : {{ auteur.identite }}
        </li>
        <li class="list-group-item">
            <strong>bio</strong> : {{ auteur.bio }}
        </li>
    </ul>

    <form method="post">

        <div class="d-flex justify-content-between my-4">
            <button type="submit" class="btn btn-success">Confimer</button>

            <a href="{{ path('app_auteur') }}" class="btn btn-danger">Annuler</a>
        </div>
    
    </form>
{% endblock %}